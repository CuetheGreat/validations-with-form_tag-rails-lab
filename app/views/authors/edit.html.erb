<h1>Editing <%= @author.name %></h1>

<% if @author.errors.any?%>
<div id='error_explanation'>
    <ul >
    <% @author.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
    <% end %>
    </ul>
</div>
<%end%>


<%= form_tag author_path(@author), method: 'patch' do %>

<div class="field<%= ' field_with_errors' if @author.errors[:name].any? %>">
<%= label_tag 'name' %>
<%= text_field_tag "name", @author.name %>
</div>
<br>
<div class="field<%= ' field_with_errors' if @author.errors[:email].any? %>">
<%= label_tag 'email'%>
<%= email_field "email", @author.email %>
</div>
<br>
<div class="field<%= ' field_with_errors' if @author.errors[:phone_number].any? %>">
<%= label_tag 'phone_number' %>
<%= telephone_field_tag 'phone_number', @author.phone_number %>
</div>
<br>
<%= submit_tag "Edit" %>
<% end %>